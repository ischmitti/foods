---
layout: 'base.njk'
title:  'title' 
---


<section class="recipe">
    <div class="global-container ">
        <div class="recipe-row">
                  <div class="recipe-caption-col">
                            <div class="overcaptions">
                                <p>{{ date | postDate }}</p>
                                <p>{{ difficulty }}</p>
                            </div>
                            <h3 class="recipe-title">{{ title }}</h3>
                            <p class="recipe-descriptions">{{ description }} </p>
                    </div>
                    <div class="recipe-image-col"><img class="recipe-img" src="{{ image }}" alt="{{ imageAlt }}">
                    </div>
            </div>
        </div>

        <div class="divider"></div>

        <div class="content-container global-container">
            {{ content | safe }}
        </div>
    </div>
</section>