                                <div class="card slide-card">
                                    <div class="card-img">
                                        <img class="allRecipes-img" src="{{ post.data.image }}" alt="{{post.data.imageAlt}}" class="img-fluid">
                                        <div class="card-body">

                                          <h5 class="card-title">{{ post.data.title }}</h5>
                        
                                          <p class="card-text">{{ post.data.description }}</p>
                                       
                                          </div>
                                      </div>
                                  </div>
                              </div>
                      {%- endfor -%}
                            </div>   
            </div>
        </div>


